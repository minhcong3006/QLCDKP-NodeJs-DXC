<div class="mt-3">
    <h3>Chỉnh sửa thông tin cư dân</h3>
    <form method='POST' action='/resident/{{residents._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='owner'>Tên chủ hộ</label>
            <input class='form-control' value="{{residents.owner}}" id='owner' name='owner' />
        </div>
        <div class='form-group'>
            <label for='image'>Hình ảnh</label>
            <input type="file" class='form-control form-control-file' value="{{residents.image}}" id='image' name='image' />
        </div>
        <div class='form-group'>
            <label for='address'>Địa chỉ</label>
            <input class='form-control' value="{{residents.address}}" id='address' name='address' />
        </div>
        <div class='form-group'>
            <label for='phone'>Số điện thoại</label>
            <input class='form-control' value="{{residents.phone}}" id='phone' name='phone' />
        </div>
        <div class='form-group'>
            <label for='resident'>Cư dân</label>
            <input class='form-control' value="{{residents.resident}}" id='resident' name='resident' />
        </div>
        <div class='form-group'>
            <label for='totalPeople'>Tổng số thành viên</label>
            <input class='form-control' value="{{residents.totalPeople}}" id='totalPeople' name='totalPeople' />
        </div>
        <button type='submit' class='btn btn-primary'>Chỉnh sửa</button>
    </form>
</div>

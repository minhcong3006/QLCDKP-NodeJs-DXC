<div class="mt-3">
    <h3>Thêm cư dân</h3>
    <form method='POST' action='/resident/store'>
        <div class='form-group'>
            <label for='owner'>Tên chủ hộ</label>
            <input class='form-control' id='owner' name='owner' />
        </div>
        <div class='form-group'>
            <label for='image'>Hình ảnh</label>
            <input type="file" class='form-control form-control-file' id='image' name='image' />
        </div>
        <div class='form-group'>
            <label for='address'>Địa chỉ</label>
            <input class='form-control' id='address' name='address' />
        </div>
        <div class='form-group'>
            <label for='phone'>Số điện thoại</label>
            <input class='form-control' id='phone' name='phone' />
        </div>
        <div class='form-group'>
            <label for='resident'>Cư dân</label>
            <input class='form-control' id='resident' name='resident' />
        </div>
        <div class='form-group'>
            <label for='totalPeople'>Tổng số thành viên</label>
            <input class='form-control' id='totalPeople' name='totalPeople' />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm cư dân</button>
    </form>
</div>